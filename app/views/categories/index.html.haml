#wrapper
  / Navigation
  #page-wrapper
    .container-fluid
      / Page Heading
      .row
        .col-lg-12
          %h1.page-header
            Category Listing
            %small  Category Overview
          %ol.breadcrumb
            %li.active
              %i.fa.fa-dashboard
              Index
      / /.row
      .row
        .col-lg-12
          .alert.alert-info.alert-dismissable
            %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} Ã—
            %i.fa.fa-info-circle
            %strong 
            Try out
            %a.alert-link{:href => "/categories/new"} Add Category
      .row
        .col-lg-12
          = flash[:message] if flash[:message].present?
          = flash[:message] = nil
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped
              %thead
                %tr
                  %th
                    Category Name
                  %th
                    Action
              %tbody
                - @categories.each do |category|
                  %tr
                    %td
                      = category.name
                    %td
                      = link_to "Edit", edit_category_path(:id => category.id), class: "btn btn-primary"
                      = link_to "Delete", category_path(:id => category.id), method: :delete, data: {confirm: "Are you sure?"},  class: "btn btn-danger"