= form_for @product do |f|
	= f.label 'Name:'
	= f.text_field :name
	= file_field :image,nil,id: 'image_file', class: 'media_file_field',data: {target_id: '#inventory_item_list_div', url: temp_image_update_products_path}
	%span{id: 'inventory_item_list_div'}

	%br
	%br
	= f.submit "Upload"

