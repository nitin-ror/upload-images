	$(document).on("change", '.media_file_field', function(){
		alert('dsa');
		var file_data = $(this).prop("files")[0];
		var form_data = new FormData();
		var update_div_id = $(this).data('target-id');
		var url = $(this).data('url');
		var watermark_id = $(this).data('watermark-id');
		var wt_checked= false;
		if (watermark_id != undefined)
		wt_checked = $(watermark_id).is(':checked');

		form_data.append("media_file", file_data);
		form_data.append("update_div_id", update_div_id);
		form_data.append("watermark", wt_checked);
		ajax_image_upload_call(url,form_data,'POST');
	});


